<script>
  const labs = {
    maternal: {
      title: "Maternal & Child Health Lab",
      image: "/images/maternal-lab.jpg",
      desc: "AIMS: To appreciate the concepts and principles of midwifery and obstetrical nursing."
    },
    paediatric: {
      title: "Paediatric Lab",
      image: "/images/paediatric-lab.jpg",
      desc: "AIMS: To understand and practice child care techniques including growth monitoring and vaccination training."
    },
    nutrition: {
      title: "Nutrition Lab",
      image: "/images/nutrition-lab.jpg",
      desc: "AIMS: To gain knowledge of balanced diets, nutrition assessment, and food preparation."
    },
    community: {
      title: "Community Health Nursing Lab",
      image: "/images/community-lab.jpg",
      desc: "AIMS: To develop community health practices and understand outreach services."
    },
    foundation: {
      title: "Nursing Foundation Lab",
      image: "/images/foundation-lab.jpg",
      desc: "AIMS: To master fundamental nursing procedures and patient care skills."
    },
    surgical: {
      title: "Medical-Surgical Nursing Lab",
      image: "/images/surgical-lab.jpg",
      desc: "AIMS: To learn surgical equipment handling and post-operative nursing."
    },
    computer: {
      title: "Computer Lab",
      image: "/images/computer-lab.jpg",
      desc: "AIMS: To develop IT skills including patient record systems and research support."
    },
    bioscience: {
      title: "Bio-Science Lab",
      image: "/images/bioscience-lab.jpg",
      desc: "AIMS: To study anatomical models, microbiology, and physiology fundamentals."
    },
    advanced: {
      title: "Advanced Nursing Skill Lab",
      image: "/images/advanced-lab.jpg",
      desc: "AIMS: To practice emergency nursing and complex clinical procedures."
    }
  };

  function showLab(key) {
    const lab = labs[key];
    document.getElementById("labContent").innerHTML = `
      <img src="${lab.image}" alt="${lab.title}" class="lab-img mb-3">
      <h3>${lab.title}</h3>
      <p>${lab.desc}</p>
    `;
    document.querySelectorAll('.lab-list a').forEach(item => item.classList.remove('active'));
    event.target.classList.add('active');
  }
</script>

